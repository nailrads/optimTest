server {
    listen       80;
    listen  [::]:80;
    server_name  nnz.com;

    location / {
        proxy_pass   http://web:3000;

        # Need for sockets
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /api {
        proxy_pass   http://api:3030;
        #rewrite ^/api/v1/(.*) /$1 break;
    }
}
